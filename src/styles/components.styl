@require 'constants.styl'
@require 'fonts.styl'
@require 'buttons.styl'
@require 'utils.styl'

block(colorBorder=colorBorder)
    display block
    padding 35px
    border colorBorder 2px solid
    border-radius borderRadiusXL
    backdrop-filter blur(10px)
    background linear-gradient(30deg, transparent, mix(white, transparent, 30%))
    header
        font-large()
    section
        font-medium()

block-emp-1(xDiff=20px, yDiff=20px)
    background mix(colorEmp11, transparent, 80%)
    padding 50px
    border-radius borderRadiusXL
    position relative
    color colorTextLight1
    &::before
    &::after
        content ''
        position absolute
        inset (yDiff) (xDiff) (- yDiff) (- xDiff)
        background mix(colorEmp13, transparent, 70%)
        border-radius inherit
        z-index -1
        trans()
        @media({mobile})
            inset (max(yDiff / 2, 6px)) (max(xDiff / 2, 6px)) (min(- yDiff / 2, -6px)) (min(- xDiff / 2, -6px))
    &::after
        background mix(colorEmp15, transparent)
        inset (yDiff * 1.7) (xDiff * 1.7) (- yDiff * 1.7) (- xDiff * 1.7)
        z-index -2
        trans()
        @media({mobile})
            inset (max(yDiff * 1.7 / 2, 12px)) (max(xDiff * 1.7 / 2, 12px)) (min(- yDiff * 1.7 / 2, -12px)) (min(- xDiff * 1.7 / 2, -12px))
block-emp-2(xDiff=20px, yDiff=20px)
    block-emp-1(xDiff, yDiff)
    background mix(colorEmp21, transparent, 80%)
    &::before
        background mix(colorEmp22, transparent, 70%)
    &::after
        background mix(colorEmp23, transparent)

block-emp-1-bg(xDiff=20px, yDiff=20px)
    block-emp-1(xDiff, yDiff)
    border colorEmp16 1px solid
    background colorBg
block-emp-2-bg(xDiff=20px, yDiff=20px)
    block-emp-2(xDiff, yDiff)
    border colorEmp21 1px solid
    background colorBg


block-bg(colorBg=colorBg)
    display block
    background colorBg

input()
    margin 0
    padding 5px 10px
    background colorBg
    border colorEmp21 1px solid
    outline none
    border-radius borderRadiusM
    color colorText2
    cursor text
    trans()
    font-small()
    &:focus
        border-color transparent
        border-bottom-color colorEmp21
        color colorEmp21
        border-radius 0
    &::placeholder
        color colorText5
    &[disabled]
        border none
